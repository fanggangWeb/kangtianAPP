<!-- 人员弹框 -->
<view class='customer-model center_2'>
  <view class='model-content'>
    <view class='title'>成员</view>
    <view class='customer-box'>
        <view class='customer-item' wx:for='{{6}}' wx:key='{{index}}'>
          <view class='change-box center_2'>
            <image src='/assets/images/browse/change_ok.png' mode='aspectFill' class='change-ok-img'></image>
          </view>
          <view class='customer-header'>
            <image src='/assets/images/no_data.png' mode='aspectFill' class='header-img'></image>
          </view>
          <view class='customer-info'>
            <view class='c-info-item'>
              <image src='/assets/images/browse/time.png' mode='aspectFill' ></image>
              <text>10次</text>
            </view>
          </view>
        </view>
    </view>
    <view class='title'>置业顾问</view>
    <view class="change-counselor">
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" range-key='name'>
        <view class="picker">
          <text>{{array[index].name}}</text>
          <image src='/assets/images/browse/arrow_down.png' mode='aspectFill'></image>
        </view>
      </picker>
    </view>
    <view class='submit-bottom'>确定</view>
  </view>
</view>
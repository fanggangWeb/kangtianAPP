@import "/assets/wxss/common.wxss";
.container {
  width: 100%;
}

/* 搜索区的格式 */
.search {
  position: fixed;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
  background: white;
  /* border-bottom: 4rpx solid #ECEFF4; */
}
.search input {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #F0F3F8;
  border-radius: 40rpx;
  color: #333333;
  font-size: 28rpx;
}
.input-style {
  text-align: center;
  color: #A0A5AE;
}
.content {
  width: 100%;
  box-sizing: border-box;
  padding: 120rpx 30rpx 0 30rpx;
}
/* 标题 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 40rpx;
}
.list-con {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.list {
  width: 100rpx;
  margin-right: 44rpx;
  margin-bottom: 40rpx;
}
.list:nth-child(5n) {
  margin-right: 0rpx;
}
.avatar {
  position: relative;
  width: 100%;
  height: 100rpx;
  border-radius: 50%;
  background: #ECEFF4;
}
.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.vip-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 36rpx;
  height: 36rpx;
}
.username {
  color: #666666;
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  margin-top: 20rpx;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
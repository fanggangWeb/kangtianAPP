<nav-bar navbar-data='{{navbarData}}'></nav-bar>
<view class='container' style='padding-top: {{height}}px'>
	<view class="content">
		<!-- 已经录入 -->
		<view class='title'>已录客户</view>
		<view class='customer-box recorded-customer'>
			<scroll-view scroll-x="true">
				<view class='customer-item' wx:for='{{6}}' wx:key='{{index}}' bindtap='skipPage' data-index='{{index}}'>
				<!-- 	<view class='change-box center_2'>
						<image src='/assets/images/browse/change_ok.png' mode='aspectFill' class='change-ok-img'></image>
					</view> -->
					<view class='customer-header'>
						<image src='/assets/images/no_data.png' mode='aspectFill' class='header-img'></image>
						<image src='/assets/images/browse/deal.png' mode='aspectFill' class='deal-img'></image>
					</view>
					<view class='customer-name'>
						<text>李茂芹</text>
						<image src='/assets/images/vip2.png' mode='aspectFill' class='vip-img'></image>
					</view>
					<view class='customer-info'>
						<view class='c-info-item'>
							<image src='/assets/images/browse/name.png' mode='aspectFill'></image>
							<text class='c-info-name'>李茂芹</text>
							<text class='c-info-dot'></text>
						</view>
						<view class='c-info-item c-info-mt'>
							<image src='/assets/images/browse/time.png' mode='aspectFill'></image>
							<text>10次</text>
						</view>
					</view>
				</view>
			</scroll-view>
		</view>
		<!-- 新访客户 -->
		<view class='title'>新访客户</view>
		<view class='customer-box new-customer'>
			<scroll-view scroll-x="true">
				<view class='customer-item' wx:for='{{6}}' wx:key='{{index}}' catchlongpress='splitGroup' data-index='{{index}}'>
					<view class='change-box center_2'>
						<image src='/assets/images/browse/change_ok.png' mode='aspectFill' class='change-ok-img'></image>
					</view>
					<view class='customer-header'>
						<image src='/assets/images/no_data.png' mode='aspectFill' class='header-img'></image>
						<image src='/assets/images/browse/deal.png' mode='aspectFill' class='deal-img'></image>
					</view>
					<view class='customer-info'>
						<view class='c-info-item'>
							<image src='/assets/images/browse/time.png' mode='aspectFill'></image>
							<text>10次</text>
						</view>
					</view>
				</view>
			</scroll-view>
		</view>
	</view>
</view>
<view class="btn-box">
	<view class="submit-button" bindtap='associateConsultant'>关联顾问</view>
</view>
<!-- 弹框 -->
<customer-modal show='{{showModal}}' bindsubmitmodal='modalSubmit' bindclosemodal='closeModal' height='{{height}}'
 datalist='{{visitorList}}' counselorlist='{{counselorList}}' componenttext='{{componentText}}'></customer-modal>

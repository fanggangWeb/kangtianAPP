.container{
  width: 100%;
}
view{
  box-sizing: border-box
}
.content{
	padding-top: 50rpx;
	padding-bottom: 100rpx;
}
/* 操作按钮 */
.btn-box{
	padding: 0;
}
.operate-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  /* padding: 50rpx 30rpx; */
}
.operate-box view{
  width:25%;
  height:90rpx;
  /* border-radius:24rpx; */
  font-size:24rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 90rpx;
}
.operate-box .operate-item1{
  background:rgba(75,131,233,1);
}
.operate-box .operate-item2{
  background:rgba(180,93,235,1);
}
.operate-box .operate-item3{
  background:rgba(55,226,160,1);
}
.operate-box .operate-item4{
  background:rgba(237,214,57,1);
}
/* 客户标题 */
.title{
  text-align: left;
  line-height:40rpx;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 52rpx;
  width: 100%;
  padding: 0 30rpx;
}
/* 客户列表 */
.customer-box{
  padding-left: 30rpx
}
scroll-view{
  white-space:nowrap;
}
.customer-item{
  width:162rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,238,238,1);
  border-radius:4rpx;
  position: relative;
  box-shadow:0px 6rpx 12rpx rgba(0,0,0,0.04);
  display: inline-block;
  margin-right: 14rpx;
}
.customer-header{
  position: relative;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.customer-header, .customer-header .header-img{
  width:160rpx;
  height:160rpx;
  border-radius:4rpx;
  
}
.customer-header .deal-img{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  right: 6rpx;
  bottom: 6rpx;
  z-index: 9
}
.change-box{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  z-index: 9;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center;
}

.change-ok-img{
  width: 22rpx;
  height: 17rpx;
}
.customer-name{
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.customer-name text{
  font-size:24rpx;
  font-weight:bold;
  line-height: 30rpx;
  color:rgba(51,51,51,1);
}
.customer-name .vip-img{
  width: 29rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
.customer-info{
  padding: 13rpx 15rpx;
}
.customer-info .c-info-item{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.c-info-mt{
  margin-top: 10rpx;
}
.customer-info .c-info-item image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 12rpx;
}
.customer-info .c-info-item text{
  font-size:20rpx;
  font-weight:500;
  line-height: 28rpx;
  color:rgba(0,0,0,1);
}
.customer-info .c-info-item .c-info-name{
  font-size:24rpx;
}
.customer-info .c-info-item .c-info-dot{
  width:8rpx;
  height:8rpx;
  background:rgba(228,85,78,1);
  border-radius:50%;
  margin-left: 8rpx;
}
.customer-info .c-info-item .c-info-dot0{
	background:#B0B0B0
}
.customer-info .c-info-item .c-info-dot1{
	background:#3CDC4B
}
.customer-info .c-info-item .c-info-dot2{
	background:#E4554E
}
.customer-info .c-info-item .c-info-dot3{
	background:#B0B0B0
}
/* 已录客户 */
.recorded-customer{
  margin-bottom: 60rpx;
}
.recorded-customer scroll-view{
  height:320rpx;
}
/* 新建房客 */
.new-customer scroll-view{
  height:240rpx;
}
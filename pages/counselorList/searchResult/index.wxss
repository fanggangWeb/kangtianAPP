.container{
  width: 100%;
}
view{
  box-sizing: border-box
}
.centent{
	padding-top: 50rpx;
}
/* 客户标题 */
.title{
  text-align: left;
  line-height:40rpx;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 52rpx;
  width: 100%;
  padding: 0 30rpx;
}
/* 客户列表 */

.counselor{
  margin-bottom: 76rpx
}
.customer-box{
  padding-left: 30rpx
}
scroll-view{
  white-space:nowrap;
  height:290rpx;
}
.customer-item{
  width:202rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,238,238,1);
  border-radius:4rpx;
  position: relative;
  box-shadow:0px 6rpx 12rpx rgba(0,0,0,0.04);
  display: inline-block;
  margin-right: 14rpx;
}
.customer-header{
  position: relative;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.customer-header, .customer-header .header-img{
  width:100%;
  height:160rpx;
  border-radius:4rpx;
  
}
.customer-info{
  padding: 13rpx 15rpx;
}
.customer-info .c-info-item{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.c-info-mt{
  margin-top: 10rpx;
}
.customer-info .c-info-item image{
  width: 30rpx;
  height:30rpx;
  margin-right: 12rpx;
}
.customer-info .c-info-item text{
  font-size:20rpx;
  font-weight:500;
  line-height: 28rpx;
  color:rgba(0,0,0,1);
}
.customer-info .c-info-item .c-info-name{
  font-size:24rpx;
}
.customer-info .c-info-item .c-info-dot{
  width:8rpx;
  height:8rpx;
  background:rgba(228,85,78,1);
  border-radius:50%;
  margin-left: 8rpx;
}

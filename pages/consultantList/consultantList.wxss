@import "/assets/wxss/common.wxss";
.container {
  width: 100%;
}
.content {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
/* 顶部切换的tabbar */
.tabbar {
  width: 100%;
  height: 140rpx;
  border-bottom: 8rpx solid #ECEFF4;
}
.tab-con {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tab {
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #ECEFF4;
  border-radius: 25rpx;
  color: #A0A5AE;
  font-size: 24rpx;
}
.tab.active {
  background: #396BEA;
  color: white;
}
/* 搜索区的格式 */
.search {
  position: fixed;
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  padding: 0 30rpx 20rpx 30rpx;
  background: white;
  border-bottom: 4rpx solid #ECEFF4;
}
.search input {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #F0F3F8;
  border-radius: 40rpx;
  color: #333333;
  font-size: 28rpx;
}
.input-style {
  text-align: center;
  color: #A0A5AE;
}
/* 头部的表头格式 */
.lengend {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 80rpx;
}
.name {
  width: 150rpx;
}
.number {
  width: 400rpx;
  margin-left: 20rpx;
  text-align: center;
}
.time {
  width: calc(100% - 490rpx);
  text-align: right;
  margin-left: 20rpx;
}
/* 列表 */
.list-con {
  width: 100%;
  /* padding-top: 70rpx; */
}
.list {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  border-bottom: 2rpx solid #ECEFF4;
}
.list-avatar {
  width: 150rpx;
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
}
.level {
  width: 26rpx;
  height: 22rpx;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  background: #ECEFF4;
  border-radius: 50%;
}
.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.username {
  margin-left: 18rpx;
  width: calc(100% - 108rpx);
  line-height: 40rpx;
  display: -webkit-box;
  /* 超出两行显示省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-number {
  width: 400rpx;
  margin-left: 20rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 40rpx;
  /* 超出两行显示省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-time {
  width: calc(100% - 490rpx);
  /* text-align: right; */
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  line-height: 40rpx;
  /* 超出两行显示省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
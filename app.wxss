/**app.wxss**/
page {
  width: 100%;
  height: 100%;
}

.center_2{
  display: flex;
  justify-content: center;
  align-items: center
}
/* 按钮固定定位 */
.btn-box{
  width:100%;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  padding: 20rpx 0;
  background: #fff;
  box-shadow:0px -6rpx 12rpx rgba(0,0,0,0.05);
  z-index: 99
}
button::after{
  display: none;
}
/* 按钮 */
.submit-button{
  width: 660rpx;
  height: 80rpx;
  background:#396BEA;
  box-shadow:0px 6rpx 12rpx rgba(11,107,232,0.25);
  border-radius: 48rpx;
  font-size: 32rpx;
  line-height: 90rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin: 0rpx auto;
}
button[disabled]:not([type]){
  background: #396BEA;
  color: #fff;
}